<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Imagen_jugadres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/player" />

    <TextView
        android:id="@+id/posicion_jugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C4610DBF"
        android:text="TextView"
        android:textColor="#F3EDED"
        app:layout_constraintBottom_toBottomOf="@+id/Imagen_jugadres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Imagen_jugadres" />

    <TextView
        android:id="@+id/nombre_jugador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C4610DBF"
        android:text="TextView"
        android:textColor="#F3EDED"
        app:layout_constraintBottom_toTopOf="@+id/posicion_jugador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
